<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;net7.0-windows</TargetFrameworks>
    <LangVersion>10.0</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\ServiceControl.LicenseManagement\ServiceControl.LicenseManagement.csproj" />
  </ItemGroup>

  <ItemGroup Label="Needed for build ordering">
    <ProjectReference Include="..\ServiceControlInstaller.Packaging\ServiceControlInstaller.Packaging.csproj" ReferenceOutputAssembly="false" Private="false" SkipGetTargetFrameworkProperties="true" UndefineProperties="TargetFramework" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net472'">
    <Reference Include="System.Configuration" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DotNetZip" />
    <PackageReference Include="Microsoft.Data.SqlClient" />
    <PackageReference Include="Newtonsoft.Json" />
    <PackageReference Include="System.DirectoryServices.AccountManagement" />
    <PackageReference Include="System.IO.Compression" />
    <PackageReference Include="System.Management" />
    <PackageReference Include="System.Reflection.MetadataLoadContext" />
    <PackageReference Include="System.ServiceProcess.ServiceController" />
  </ItemGroup>

  <Target Name="EmbedResources" BeforeTargets="BeforeResGen">
    <ItemGroup>
      <EmbeddedResource Include="..\..\zip\*.zip" Link="Zips\%(Filename)%(Extension)" LogicalName="%(Filename)%(Extension)" Visible="false" />
      <EmbeddedResource Include="..\..\deploy\**\persistence.manifest" Link="%(RecursiveDir)%(Filename)%(Extension)" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" Visible="false" />
      <EmbeddedResource Include="..\..\deploy\Particular.ServiceControl\**\transport.manifest" Link="%(RecursiveDir)%(Filename)%(Extension)" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" Visible="false" />
    </ItemGroup>
  </Target>

</Project>